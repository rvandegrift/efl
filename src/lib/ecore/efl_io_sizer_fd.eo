mixin Efl.Io.Sizer.Fd (Efl.Io.Sizer) {
    [[Resizes fd usign ftruncate(2).

      @since 1.19
    ]]

    methods {
        @property sizer_fd {
            [[Sizer file descriptor]]
            get {}
            set @protected {}
            values {
                fd: int; [[File descriptor]]
            }
        }
    }

    implements {
        Efl.Io.Sizer.resize;
        Efl.Io.Sizer.size { get; }
    }
}
